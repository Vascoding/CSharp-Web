@model AddCameraModel
@{
    ViewData["Title"] = "Edit Camera";
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Edit Camera</h4>
            <hr />
            <div class="form-group"><span class="text-danger">@TempData["error"]</span></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make"></label>
                <select asp-for="Make" asp-items="Html.GetEnumSelectList<CameraMake>()" class="form-control"></select>
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" min="0" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" min="0" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinShutterSpeed"></label>
                <input asp-for="MinShutterSpeed" min="1" max="30" class="form-control" />
                <span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxShutterSpeed"></label>
                <input asp-for="MaxShutterSpeed" min="2000" max="8000" class="form-control" />
                <span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinIso"></label>
                <input asp-for="MinIso" step="50" min="50" max="100" class="form-control" />
                <span asp-validation-for="MinIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxIso"></label>
                <input asp-for="MaxIso" step="100" min="200" max="409600" class="form-control" />
                <span asp-validation-for="MaxIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFullFrame"></label>
                @Html.RadioButtonFor(m => m.IsFullFrame, true) Yes
                @Html.RadioButtonFor(m => m.IsFullFrame, false) No
                <span asp-validation-for="MaxIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoResolution"></label>
                <input asp-for="VideoResolution" class="form-control" />
                <span asp-validation-for="LightMatering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LightMatering"></label>
                @foreach (var lm in Model.LightMatering)
                {
                    <input type="checkbox" name="LightMatering" value="@lm" checked /> @lm.ToString()
                }
                @if (!Model.LightMatering.Contains(LightMatering.Spot))
                {
                    <input type="checkbox" name="LightMatering" value="@((int)LightMatering.Spot)" />
                    <text>
                    Spot
                    </text>

                }
                @if (!Model.LightMatering.Contains(LightMatering.CenterWeighted))
                {
                    <input type="checkbox" name="LightMatering" value="@((int)LightMatering.CenterWeighted)" />
                    <text>
                    Center Weighted
                    </text>
                }
                @if (!Model.LightMatering.Contains(LightMatering.Evaluative))
                {
                    <input type="checkbox" name="LightMatering" value="@((int)LightMatering.Evaluative)" />
                    <text>
                    Evaluative
                    </text>
                }

                <span asp-validation-for="VideoResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Edit Camera</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
