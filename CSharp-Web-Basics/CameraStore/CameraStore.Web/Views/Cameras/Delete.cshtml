@model CameraDetailsModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="/cameras/confirm/@Model.Id">
            <h4>Delete Camera</h4>
            <hr />
            <div class="form-group"><span class="text-danger">@TempData["error"]</span></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" readonly asp-items="Html.GetEnumSelectList<CameraMake>()" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" readonly class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" readonly min="0" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" readonly min="0" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinShutterSpeed"></label>
                <input asp-for="MinShutterSpeed" readonly min="1" max="30" class="form-control" />
                <span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxShutterSpeed"></label>
                <input asp-for="MaxShutterSpeed" readonly min="2000" max="8000" class="form-control" />
                <span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinIso"></label>
                <input asp-for="MinIso" step="50" readonly min="50" max="100" class="form-control" />
                <span asp-validation-for="MinIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxIso"></label>
                <input asp-for="MaxIso" step="100" readonly min="200" max="409600" class="form-control" />
                <span asp-validation-for="MaxIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFullFrame"></label>
                @if (Model.IsFullFrame)
                {
                    <input type="checkbox" readonly checked />
                }
                else
                {
                    <input type="checkbox" readonly />
                }
                <span asp-validation-for="IsFullFrame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoResolution"></label>
                <input readonly asp-for="VideoResolution" class="form-control" />
                <span asp-validation-for="LightMatering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LightMatering"></label>
                @foreach (var lm in Model.LightMatering)
                {
                    <input type="checkbox" name="LightMatering" value="@lm" checked /> @lm.ToString()
                }
                <span asp-validation-for="VideoResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea readonly asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input readonly asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Delete Camera</button>
        </form>
    </div>
</div>
